pipeline {
    agent any
    stages {
        stage('build') {
        	agent{
        		docker { 
        			image 'python:3.7.8-stretch'  
        		}
        	}
            steps {
            	sh 'pip install Pylint'
                sh 'echo "Hello World"'
				sh 'ls -lah'
            }
        }
        stage('sonarqube analysis')
        {	
        	environment{
    			SCANNER_HOME = tool 'SonarScanner4'
    		}
        	steps{ 
        		withSonarQubeEnv('sonarqube') { 
        			script {
  					sh('cd $SCANNER_HOME/bin && chmod +X sonar-scanner && ./sonar-scanner -X -Dsonar.projectKey=test-node-js -Dsonar.sources=. -Dsonar.host.url=http://127.0.0.1:9000')
					} // If you have configured more than one global server connection, you can specify its name"
    			}		
        	}
        }
    }
}
