pipeline {
    agent any
    stages {
        stage('build') {
        	agent {
    		 docker{
    			image 'python:3.7.8-stretch'
    		 }
    		}
            steps {
                sh 'echo "Hello World"'
				sh 'ls -lah'
            }
        }
        stage('install dependencies'){
        	agent {
    		 docker{
    			image 'python:3.7.8-stretch'
    			}
    		}
        	steps{
        		script{
        			def exists = fileExists 'requirements.txt'
        			if(exists){
        				sh 'pip install -r requirements.txt'
        				sh 'bandit -r sources/* -o bandit-report'
        				stash(name: 'bandit-reports', includes: 'bandit-report') 
        			}
        		}        	
        	}
        }
        stage('sonarqube analysis')
        {	
        	environment{
    			SCANNER_HOME = tool 'SonarScanner4'
    		}
        	steps{ 
        		withSonarQubeEnv('sonarqube') { 
        			script {
  					sh('cd $SCANNER_HOME/bin && chmod +X sonar-scanner && ./sonar-scanner' )
					} // If you have configured more than one global server connection, you can specify its name"
    			}		
        	}
        }
    }
}
