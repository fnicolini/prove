pipeline {
    agent any
    stages {
        stage('build') {
        	agent{
        		docker { 
        			image 'python:3.7.8-stretch'  
        		}
        	}
            steps {
            	sh 'pip install Pylint'
                sh 'echo "Hello World"'
				sh 'ls -lah'
            }
        }
        stage('sonarqube analysis')
        {	
        	environment{
    			SCANNER_HOME = tool 'SonarScanner4'
    		}
        	steps{ 
        		withSonarQubeEnv('sonarqube') { 
        			script {
  					sh('cd $SCANNER_HOME/bin && chmod +X sonar-scanner && ./sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.projectName=ahah -Dsonar.projectVersion=1.0 -Dsonar.projectKey=meanstack:app -Dsonar.sources=.')
					} // If you have configured more than one global server connection, you can specify its name"
    			}		
        	}
        }
    }
}
