pipeline {
    agent any
    environment{
    	scannerHome = tool 'SonarScanner4'
    }
    stages {
        stage('build') {
        	agent{
        		docker { 
        			image 'python:3.7.8-stretch'  
        		}
        	}
            steps {
            	sh 'pip install Pylint'
                sh 'echo "Hello World"'
				sh 'ls -lah'
            }
        }
        stage('sonarqube analysis')
        {
        	steps{
        		withSonarQubeEnv('sonarqube') { 
        			sh 'pwd' // If you have configured more than one global server connection, you can specify its name
      				sh "${scannerHome}/sonar-scanner-4.2.0.1873-linux/bin/sonar-scanner"
    			}		
        	}
        }
    }
}
